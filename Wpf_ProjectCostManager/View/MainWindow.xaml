<Window x:Class="Wpf_ProjectCostManager.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Wpf_ProjectCostManager"
        mc:Ignorable="d"
        Background="Gray"
        Title="MainWindow" Height="450" Width="800" Loaded="Window_Loaded">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="16*"/>
            <ColumnDefinition Width="83*"/>
        </Grid.ColumnDefinitions>

        <WrapPanel Name="wrapPanel" Grid.Column="1"/>
        <StackPanel>
            <Button Content="專案列表" Margin="5,5,0,5" BorderThickness="0" Background="Transparent" Foreground="White" HorizontalAlignment="Left" Width="113"/>
            <Button Content="各部門成本分攤" Margin="5,5,0,5" BorderThickness="0" Background="Transparent" Foreground="White" HorizontalAlignment="Left" Width="113"/>
            <Button Content="整體執行情況" Margin="5,5,0,5" BorderThickness="0" Background="Transparent" Foreground="White" HorizontalAlignment="Left" Width="113"/>
            <Button Content="參數設定" Margin="5,5,0,5" BorderThickness="0" Background="Transparent" Foreground="White" HorizontalAlignment="Left" Width="113"/>
        </StackPanel>
    </Grid>
</Window>
